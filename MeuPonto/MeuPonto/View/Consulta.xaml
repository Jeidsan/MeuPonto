<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeuPonto.View.Consulta">
    <ContentPage.Content>
        <StackLayout>
            
            <ListView x:Name="ListaPontos" BackgroundColor="White" />
            
            <Label VerticalOptions="Fill"
                   HorizontalOptions="Fill"
                   Text="Horas trabalhadas:" />
            <Label x:Uid="lblHorasTrabalhadas"
                   x:Name="lblHorasTrabalhadas"
                   VerticalOptions="Fill"
                   HorizontalOptions="Fill"
                   FontSize="20"
                   Text="" />

            <Label VerticalOptions="Fill"
                   HorizontalOptions="Fill"
                   Text="Saldo de horas:" />
            <Label x:Uid="lblSaldoHoras"
                   x:Name="lblSaldoHoras"
                   VerticalOptions="Fill"
                   HorizontalOptions="Fill"
                   FontSize="20"
                   Text="" />
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>